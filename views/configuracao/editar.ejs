<!DOCTYPE html>
<html lang="pt-br">
    <%- include('../partials/header') %> 
<body>
    <%- include('../partials/navbar') %>     
    
    <div class="main-container" id="container">
        <div class="overlay"></div>
        <div class="search-overlay"></div>

        <%- include('../partials/menu') %> 
       
        <div id="content" class="main-content">
            <div class="layout-px-spacing">

                <div class="row layout-top-spacing">                          
                </div>
               

                <form action="/configuracao/atualizar" method="post">
                    <div class="form-group mb-4">
                        <input type="text" class="form-control"  placeholder="Empresa" name="empresa" value="<%= dados[0].empresa %> ">
                        <small class="form-text text-muted"><%= empresaErro %> </small>
                    </div>
                    <div class="form-row mb-4">
                        <div class="form-group col-md-6">
                            <label for="inputEmail4">Token</label>
                            <input type="text" class="form-control" placeholder="token" name="token" value="<%= dados[0].token %> ">
                            <small class="form-text text-muted"><%= tokenErro %> </small>
                        </div>
                        <div class="form-group col-md-6">
                            <label>Telefone</label>
                            <input type="number" class="form-control" " placeholder="Telefone" name="telefone" value="<%= dados[0].telefone %> ">
                            <small class="form-text text-muted"><%= telefoneErro %> </small>
                        </div>
                    </div>
                    <input type="hidden" class="form-control"  name="id" value="<%= dados[0].id %> ">
                    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
                </form>             
            </div>
<%- include('../partials/footer') %> 